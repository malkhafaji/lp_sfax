.container
  .panel.panel-default
    .panel-heading
      %h3.panel-title SHOWING FAX #{@fax.id}
    .panel-body
      %table.table
        %tr
          %td Recipient Name
          %td
            %b= @fax.recipient_name
        %tr
          %td Recipient Number
          %td
            %b= number_to_phone(@fax.recipient_number, area_code: true)
        %tr
          %td Fax Initial Status
          %td
            %b= @fax.status == 't' ? 'Success' : 'Failed'
        %tr
          %td Fax Message
          %td
            %b= @fax.message
        %tr
          %td Fax Queue ID
          %td
            %b= @fax.send_fax_queue_id
        %tr
          %td Is Success?
          %td
            %b= @fax.is_success  == 't' ? 'Yes' : 'No'
        %tr
          %td Final Message
          %td
            %b= @fax.result_message
        %tr
          %td Sent Fax No.
          %td
            %b= @fax.sender_fax
        %tr
          %td Page Count
          %td
            %b= @fax.pages
        %tr
          %td Result Code
          %td
            %b= @fax.result_code
        %tr
          %td Error Code
          %td
            %b= @fax.error_code
        %tr
          %td Number of Attempts
          %td
            %b= @fax.attempts
        %tr
          %td Fax Pages
          %td
            %b= @fax.fax_pages
        %tr
          %td Final Response Posted
          %td
            %b= @fax.sendback_final_response_to_client == 0 ? 'No' : 'Yes'
        %tr
          %td Request Date
          %td
            %b= @fax.created_at.in_time_zone(@zone).strftime("%m/%d/%Y %I:%m:%S %p %z")
        %tr
          %td Send Confirm Date
          %td
            %b= @fax.fax_date_iso.in_time_zone(@zone).strftime("%m/%d/%Y %I:%m:%S %p %z") if @fax.fax_date_iso
        %tr
          %td Fax Duration
          %td
            %b= @fax.fax_duration
        %tr
          %td Last Modified Date
          %td
            %b= @fax.updated_at.in_time_zone(@zone).strftime("%m/%d/%Y %I:%m:%S %p %z")
        %tr
          %td Fax Resend Attempts
          %td
            %b= @fax.resend
        %tr
          %td Environment
          %td
            %b= @fax.callback_server.name
        %tr
          %td Attachments File IDs
          %td
            %b= @fax.attachments.pluck(:file_key) if @fax.attachments.any?

  = link_to 'Back', fax_records_path , class: 'btn btn-default btn-lg'
