.container
  .row
    .col-sm-1.sidenav
    .col-md-10
      %center
        .panel.panel-info
          .panel-heading
            %h3.panel-title Total Fax Records Chart (For #{@month_name})
          .panel-body
            = area_chart @fax_records.group_by_day_of_month(:created_at).count
      .col-md-1.pull-right
