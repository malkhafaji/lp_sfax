
.row-fluid
  .col-md-12
    .col-md-1.pull-right
      \#{link_to 'Home', fax_records_path, class: 'btn btn-default btn-sm'}
.col-xs-12
  .col-md-8.col-lg-offset-2
    %center
      %h3 Fax_records Send By Day
      = line_chart FaxRecord.group_by_day(:created_at, format: "%B %d, %Y").count, discrete: true
      = pie_chart FaxRecord.group_by_hour(:created_at, format: "%B %d, %Y").count, discrete: true
      %h3 Fax Records By Recipient Name(daily)
      = bar_chart FaxRecord.group(:recipient_name).group_by_day(:created_at, format: "%B %d, %Y").count
      = line_chart FaxRecord.group(:recipient_name).group_by_day(:created_at, format: "%B %d, %Y").count
      %h3 Fax records by status (daily)
      = line_chart FaxRecord.group(:status).group_by_day(:created_at, format: "%B %d, %Y").count

