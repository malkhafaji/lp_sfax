%html
  %head
    %meta{content: 'text/html; charset=UTF-8', http_equiv: 'Content-Type'}
    %title Fax Service
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body.transparent-header
    %noscript.noscript
      #div100
        %strong Please Use JavaScript
        %br/
        You need a web browser that supports JavaScript to use our site. Without it, some pages won’t work as designed.
        To make sure JavaScript is turned on, please adjust your browser settings.
  .container-fluid#main-page
    %img.pic{src: '/images/navbar.jpg', width: '100%', height: '150px'}
    = render 'layouts/navbar'
    .container.text-center
      - flash.each do |key, value|
      - alert_class = flash[:notice] ? 'success' : 'danger'
        %div{class: "alert alert-#{alert_class}"}
          %button.close{aria_label: 'Close', data: {dismiss: 'alert'}, type: 'button'}
            %span{aria_hidden: 'true'} ×
          = value
    = yield
    .modal-mask
      .modal
        %strong Your online session is about to expire
        %br/
        %button.modal-btn I'm still here!
