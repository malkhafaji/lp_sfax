%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Fax_Service
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body.transparent-header
  .container
    %img.pic{:src=>"https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTktgB1bSrttMY_Gj68ttXZXjJAMglVuPOvFXWyz-XA_YDE3R6f", width:"100%", height:"160px"}
    = render 'layouts/navbar'
  .cont
    %div{:style => "margin:50px 0 0 500px;position:absolute;float:center"}
      - if alert.present?
        #flash_message.alert.alert-danger{:style => "text-align: center;font-size:25px;font-weight: bold; background-color:#ad5b5b;color:white"}
          = alert
      - if notice.present?
        #flash_message.alert.alert-danger{:style => "text-align: center;font-size:25px;font-weight: bold; background-color:#9ae2bd;color:black"}
          = notice
    = yield
.modal-mask
  .modal
    %strong Your online session is about to expire
    %br/
    %button.modal-btn I'm still here!
