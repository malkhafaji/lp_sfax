
<div class ="container">
<%= form_for(@fax_request) do |f| %>

<% if @fax_request.errors.any? %>
      <h2><%= pluralize(fax_request.errors.count, "error") %> prohibited this fax_request from being saved:</h2>
      <% @fax_request.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
<% end %>

<p id="notice" style="float:right;font-size: 25px"><%= notice %></p>

<div style ="float:left">
  <%= f.label :recipient_name %>
  <%= f.text_field :recipient_name,placeholder: "Enter recipient name" %>
</div>

<div style ="float:center">
  <%= f.label :recipient_number %>
  <%= f.text_field :recipient_number,placeholder: "Enter recipient number" %>
</div>

  <!-- We  need to takeout the file path and change it to the original file field and path  -->
  <%= f.hidden_field :file_path,:value => '/home/developer/test2.txt' %>
  <%= f.hidden_field :client_receipt_date %>
  <%= f.hidden_field :status %>
  <%= f.hidden_field :message %>
  <%= f.hidden_field :send_confirm_date %>
  <%= f.hidden_field :vendor_confirm_date %>
  <%= f.submit 'Send fax' %>
<% end %>

</br><hr></br>
<table class="table table-striped", id= 'fax_request'>
  <thead>
    <tr>
      <th>Recipient name</th>
      <th>Recipient number</th>
      <th>File path</th>
      <th>Client receipt date</th>
      <th>Status</th>
      <th>Message</th>
      <th>Send confirm date</th>
      <th>Vendor confirm date</th>
   
    </tr>
  </thead>

  <tbody>
    <% @fax_requests.each do |fax_request| %>
      <tr>
        <td><%= fax_request.recipient_name %></td>
        <td><%= fax_request.recipient_number %></td>
        <td><%= fax_request.file_path %></td>
        <td><%= fax_request.client_receipt_date %></td>
        <td><%= fax_request.status %></td>
        <td><%= fax_request.message %></td>
        <td><%= fax_request.send_confirm_date %></td>
        <td><%= fax_request.vendor_confirm_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
